#include <stdio.h>
#include <stdlib.h>
 int main()
{
    char *create_array(unsigned int size, char c)
    {
    	unsigned int i;
    	char *array;

    	if (size == 0)
    		return (NULL);
    	array = calloc(size , sizeof(char));
    	if (array == NULL)
    		return (NULL);
    	for (i = 0; i < size; i++)
    		array[i] = c;
    		printf("%c", c);
    	return (array);
    	realloc (array, 50);
    	free (array);
    }
}
